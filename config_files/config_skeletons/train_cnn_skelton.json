{
  "_comment_mode": "This field MUST be 'train_cnn' for this configuration file.",
  "mode": "train_cnn",

  "//": "--- 1. Required Base Parameters ---",
  "csv_path": "/path/to/your/cleave_data.csv",
  "img_folder": "/path/to/your/image_folder/",
  "image_shape": [224, 224, 3],
  "feature_shape": [5],
  
  "//": "--- 2. CNN Training Specific Parameters ---",
  "cnn_mode": "bad_good",
  "num_classes": 2,
  "dropout1": 0.2,
  "dense1": 128,
  "dropout2": 0.2,
  "dense2": 64,
  "dropout3": 0.2,
  "angle_threshold": 2.0,
  "diameter_threshold": 128.0,
  "tension_threshold": 190,
  "backbone": "efficientnet",
  "unfreeze_from": 0,
  "classification_type": "binary",
  "train_p": 0.9,
  "test_p": 1.0,

  "//": "--- 3. Optional File Paths ---",
  "save_model_file": "./models/trained_cnn_model.keras",
  "save_history_file": "./history/cnn_training_history.json",
  "feature_scaler_path": "./scalers/feature_scaler.pkl",
  "model_path": null,
  "continue_train": "n",
  
  "//": "--- 4. Training Hyperparameters ---",
  "learning_rate": 0.001,
  "batch_size": 16,
  "max_epochs": 50,
  "test_size": 0.2,
  "buffer_size": 1000,
  
  "//": "--- 5. Learning Rate Reduction on Plateau ---",
  "reduce_lr": 0.5,
  "reduce_lr_patience": 5,


  "//": "--- 6. Early Stopping Configuration ---",
  "_comment_early_stopping": "Set to 'y' to enable. Monitors 'val_accuracy' by default.",
  "early_stopping": "y",
  "patience": 10,
  "monitor": "val_accuracy",
  "method": "max",

  "//": "--- 7. Model Checkpointing Configuration ---",
  "_comment_checkpointing": "Set to 'y' to enable saving the best model during training.",
  "checkpoints": "y",
  "checkpoint_filepath": "./checkpoints/best_cnn_model.keras",

  "//": "--- 8. Data Augmentation Parameters (Optional) ---",
  "brightness": 0.2,
  "rotation": 0.1,
  "height": 0.1,
  "width": 0.1,
  "contrast": 0.2
}