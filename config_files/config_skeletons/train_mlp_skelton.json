{
  "_comment_mode": "This field MUST be 'train_mlp' for this configuration file.",
  "mode": "train_mlp",

  "//": "--- 1. Required Base Parameters ---",
  "csv_path": "/path/to/your/cleave_data.csv",
  "img_folder": "/path/to/your/image_folder/",
  "image_shape": [224, 224, 3],
  "feature_shape": [4],
  
  "//": "--- 2. MLP Training Specific Parameters ---",
  "backbone": "efficientnet",
  "dropout1": 0.2,
  "dense1": 256,
  "dropout2": 0.2,
  "dense2": 128,
  "dropout3": 0.2,
  "angle_threshold": 2.0,
  "diameter_threshold": 128.0,
  "num_classes": 1,

  "//": "--- 3. Required File Paths for MLP ---",
  "_comment_paths": "The MLP predicts tension, so it needs both a feature scaler and a label (tension) scaler.",
  "feature_scaler_path": "./scalers/mlp_feature_scaler.pkl",
  "label_scaler_path": "./scalers/tension_label_scaler.pkl",
  "save_model_file": "./models/trained_mlp_model.keras",
  "save_history_file": "./history/mlp_training_history.json",
  "model_path": "/path/to/cnn_model.keras",
  "continue_train": "n",
  
  "//": "--- 4. Training Hyperparameters ---",
  "_comment_training": "The MLP is a regression model, so we monitor 'val_mae' (Mean Absolute Error).",
  "learning_rate": 0.001,
  "batch_size": 16,
  "max_epochs": 100,
  "test_size": 0.2,
  "buffer_size": 1000,
  
  "//": "--- 5. Learning Rate Reduction on Plateau ---",
  "reduce_lr": 0.5,
  "reduce_lr_patience": 5,

  "//": "--- 6. Early Stopping Configuration ---",
  "_comment_early_stopping": "For regression, we monitor 'val_mae' and want to minimize it ('method': 'min').",
  "early_stopping": "y",
  "patience": 15,
  "monitor": "val_mae",
  "method": "min",

  "//": "--- 7. Model Checkpointing Configuration ---",
  "_comment_checkpointing": "Saves the model with the lowest validation MAE.",
  "checkpoints": "y",
  "checkpoint_filepath": "./checkpoints/best_mlp_model.keras",

  "//": "--- 8. Optional Fields ---",
  "classification_path": null,
  "encoder_path": null,
  "objective": null,
  "set_mask": "y",
  "brightness": 0.0,
  "rotation": 0.0,
  "height": 0.0,
  "width": 0.0,
  "contrast": 0.0
